<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_bk"
    tools:context=".second">

    <ImageView
        android:id="@+id/host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/p_ublic"
        app:layout_constraintStart_toStartOf="@+id/p_ublic"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:srcCompat="@drawable/host" />

    <ImageView
        android:id="@+id/p_rivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_ublic"
        app:srcCompat="@drawable/p_rivate" />

    <ImageView
        android:id="@+id/p_ublic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/p_rivate"
        app:layout_constraintStart_toStartOf="@+id/p_rivate"
        app:layout_constraintTop_toBottomOf="@+id/host"
        app:srcCompat="@drawable/p_ublic" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/name"
        android:ems="10"
        android:hint="닉네임"
        android:inputType="textPersonName"
        android:text="이름을 입력하세요"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/host"
        app:layout_constraintStart_toStartOf="@+id/host"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>